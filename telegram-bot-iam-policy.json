{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3UserConfigAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject", 
        "s3:DeleteObject"
      ],
      "Resource": [
        "arn:aws:s3:::campbot-bucket/users/*"
      ]
    },
    {
      "Sid": "S3ListUserConfigs", 
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::campbot-bucket"
      ],
      "Condition": {
        "StringLike": {
          "s3:prefix": [
            "users/telegram_*"
          ]
        }
      }
    },
    {
      "Sid": "CloudWatchLogs",
      "Effect": "Allow", 
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": [
        "arn:aws:logs:us-west-1:*:log-group:/aws/lambda/campsite-telegram-bot*"
      ]
    }
  ]
}
